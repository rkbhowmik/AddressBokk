@model IEnumerable<AddressBookApp.Models.People>

@{
    ViewData["Title"] = "Index";
}

<h2>Person Details</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
             
            <th>
                <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">@Html.DisplayNameFor(model => model.LastName)</a>
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonNumber)
            </th>
           
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FirstName)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.PersonNumber)
        </td>

        <td>
            <a asp-action="Edit" asp-route-id="@item.PeopleID">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.PeopleID">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.PeopleID">Delete</a> |
            <a asp-action="Index" asp-route-id="@item.Addresses">Address</a>
        </td>
    </tr>
}
    </tbody>
</table>
